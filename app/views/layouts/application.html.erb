<!DOCTYPE html>
<html>
  <head>
    <title>Benson Kalahar</title>
    <link rel="alternate" type="application/atom+xml" href="<%= url_for :controller => "feeds", :action => "atom", :host => blog_host %>" />
    <%= stylesheet_link_tag "prettify.css", :media => "screen" %>
    <%= stylesheet_link_tag "screen.css", :media => "screen and (min-device-width: 961px)" %>
    <%= stylesheet_link_tag "handheld.css", :media => "only screen and (max-device-width: 960px)" %>
    <!--[if IE]>
      <%= stylesheet_link_tag "screen.css", :media => "screen" %>
    <![endif]-->
    <meta name="viewport" content="width=320; initial-scale=1.0; maximum-scale=3.0; user-scalable=1;" />
    <%= javascript_include_tag "jquery.min" %>
    <%= javascript_include_tag "rails" %>
    <%= javascript_include_tag "prettify/prettify" %>
    <%= javascript_include_tag "prettify/auto_prettify" %>
    <%= csrf_meta_tag %>
    <script type="text/javascript">
      var _gauges = _gauges || [];
      (function() {
        var t   = document.createElement('script');
        t.type  = 'text/javascript';
        t.async = true;
        t.id    = 'gauges-tracker';
        t.setAttribute('data-site-id', '4f5fb796f5a1f51e830000c7');
        t.src = '//secure.gaug.es/track.js';
        var s = document.getElementsByTagName('script')[0];
        s.parentNode.insertBefore(t, s);
      })();
    </script>
  </head>
  <body>
    <div id="content">
      <% if flash[:notice] %>
        <div id="notice">
          <%= flash[:notice] %>
        </div>
      <% end %>
      <% if flash[:error] %>
        <div id="error">
          <%= flash[:error] %>
        </div>
      <% end %>

      <% if @current_user %>
      <%= render :partial => 'shared/auth' %>
      <%= render :partial => 'shared/nav' %>
      <% end %>

      <h1 id="main"><%= link_to "Benson Kalahar", "http://#{root_host}" %></h1>

      <%= yield %>
    </div>

  </body>
</html>
