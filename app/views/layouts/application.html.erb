<!DOCTYPE html>
<html>
  <head>
    <title>Benson Kalahar</title>
    <%= stylesheet_link_tag "screen.css" %>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
  </head>
  <body>
    <div id="content">
      <% if flash[:notice] %>
        <div id="notice">
          <%= flash[:notice] %>
        </div>
      <% end %>
      <% if flash[:error] %>
        <div id="error">
          <%= flash[:error] %>
        </div>
      <% end %>

      <% if @current_user %>
        <div id="auth">
          <%= current_user.name %> | <%= link_to "log out", :controller => :sessions, :action => :destroy %>
        </div>
      <% end %>

      <%= yield %>
    </div>

  </body>
</html>
