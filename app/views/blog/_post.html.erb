<div class="post">
  <h2>
    <%= link_to post.title, blog_post_url(post) %>
    <% if @current_user and @current_user.admin? %>
      <%= link_to image_tag("edit.png"), edit_post_path(post) %>
      <%= link_to image_tag("remove.png"), post, :confirm => 'Are you sure?', :method => :delete %>
    <% end %>
  </h2>
  <div class="metadata">Posted <%= distance_of_time_in_words_to_now post.created_at %> ago</div>
  <div class="body"><%= textilize(post.body).html_safe %></div>
</div>
